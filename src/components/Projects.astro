---
import NextJsIcon from '../components/icons/NextJsIcon.astro';
import TailwindIcon from '../components/icons/TailwindIcon.astro';
import ReactIcon from '../components/icons/ReactIcon.astro';
import ShadcnIcon from '../components/icons/ShadcnIcon.astro';
import TypeScriptIcon from '../components/icons/TypeScriptIcon.astro';

const TAGS = {
    NEXT: {
        name: "Next.js",
        icon: NextJsIcon,
        class: "bg-black text-white "
    },
    TAILWIND: {
        name: "Tailwind CSS",
        icon: TailwindIcon,
        class: "bg-[#003159] text-white "
    },
    TYPESCRIPT: {
        name: "TypeScript",
        icon: TypeScriptIcon,
        class: "bg-[#003159] text-white "
    },
    REACT:{
        name: "React",
        icon:  ReactIcon,
        class: "bg-[#003159] text-white "
    },
    SHADCN:{
        name: "Shadcn/UI",
        icon: ShadcnIcon,
        class: "bg-gray-800 text-white "
    }
}

const PROJECTS = [
    {
        title: "Sala situacional",
        description: "Proyecto de tesis para el frontend de la sala situacional para ver gráficos del estado de las enfermedades endémicas del Paraguay.",
        link: "alertatemprana.vercel.app",
        image: "/projects/alertatemprana-ligth.webp",
        github: "https://github.com/Olmedo1996/frontend-sala-situacional",
        tags: [TAGS.NEXT,  TAGS.TAILWIND, TAGS.TYPESCRIPT, TAGS.REACT, TAGS.SHADCN]
    }
]
---

{
    PROJECTS.map(({description, image, link, github, tags, title}) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200/90 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <a href={link}>Link</a>
            <a href={github}>Github</a>
            <ul class="flex gap-x-2 mt-8 mb-8 flex-row">
                {
                    tags.map(tag => (
                            <li>
                                <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-3 justify-center items-center`}>
                                    {<tag.icon class={`size-6`}/>}
                                    <span>{tag.name}</span>
                                </span>
                            </li>
                        )
                    )
                }
            </ul>
            <img class="rounded shadow-2xl shadow-white/20" src={image} alt={title} />
        </article>
    ))
}