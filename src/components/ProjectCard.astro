---
import ExternalIcon from "./icons/ExternalIcon.astro";
import AvatarPill from "./AvatarPill.astro";

const { 
    description, 
    image, 
    link, 
    github, 
    tags, 
    title 
} = Astro.props;

---

	<div class="card card--1 ">
		<div class="card__info-hover">
			<div class="card__clock-info">
				<a href={link} class="text-lg font-semibold text-yellow-200/80" target="_blank" rel="noopener noreferrer">
					<ExternalIcon class="card__clock"/>
				</a>
			</div>
		</div>
		<div class="card__img"  style={`background-image: url('${image}');`} ></div>
		<a href="#">
			<div class="card__img--hover"  style={`background-image: url('${image}');`}></div>
			<div class="card__info">
				<h3 class="uppercase text-yellow-200/90 font-bold">{title}</h3>
				<h3 class="mt-2 mb-6 line-clamp-2 hover:text-clip">
					{description}
				</h3>
				<span class="font-semibold text-sm flex justify-end">
					<AvatarPill tags={tags}/>
					<!-- by 
					<a href="#by" class="font-medium text-sm text-yellow-200/90" title="author">Celeste Mills</a> -->
				</span>
			</div>
		</a>
	</div>
<style>
	.card__like {
		width: 18px;
	}

	.card__clock {
		width: 15px;
		vertical-align: middle;
		fill: #AD7D52;
	}

	.card__time {
		font-size: 12px;
		color: #AD7D52;
		vertical-align: middle;
		margin-left: 5px;
	}

	.card__clock-info {
		float: right;
	}

	.card__img {
		visibility: hidden;
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		width: 100%;
		height: 235px;
		border-top-left-radius: 12px;
		border-top-right-radius: 12px;
	}

	.card__info-hover {
		position: absolute;
		padding: 16px;
		width: 100%;
		opacity: 0;
		top: 0;
	}

	.card__img--hover {
		transition: 0.2s all ease-out;
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		width: 100%;
		position: absolute;
		height: 235px;
		border-top-left-radius: 12px;
		border-top-right-radius: 12px;
		top: 0;
	
	}

	.card {
		position: relative;
		background: rgba(255, 255, 255, 0.05);
		box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
		/* backdrop-filter: blur(10px); */

		/* margin-right: 25px; */
		transition: all .4s cubic-bezier(0.175, 0.885, 0, 1);
		position: relative;
		border-radius: 12px;
		overflow: hidden;
	}

	.card:hover {
		box-shadow: 0px 30px 18px -8px rgba(0, 0, 0,0.1);
		transform: scale(1.10, 1.10);
	}

	.card__info {
		z-index: 2;
		background-color: #1f1f1f;
		border-bottom-left-radius: 12px;
		border-bottom-right-radius: 12px;
		padding: 16px 24px 24px 24px;
	}

	.card__category {
		text-transform: uppercase;
		font-size: 13px;
		letter-spacing: 2px;
		font-weight: 500;
		color: #868686;
	}

	.card:hover .card__img--hover {
		height: 100%;
		opacity: 0.3;
	}

	.card:hover .card__info {
		background-color: transparent;
		position: relative;
	}

	.card:hover .card__info-hover {
		opacity: 1;
	}
</style>
